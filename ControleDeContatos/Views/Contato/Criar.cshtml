@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar Contato";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<form method="post" asp-controller="Contato" asp-action="Criar">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" placeholder="Digite o nome do contato" asp-for="Nome">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>
  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="email" class="form-control" placeholder="Digite o e-mail do contato" asp-for="Email">
    @Html.ValidationMessageFor(x => x.Email)
  </div>
  <div class="form-group">
    <label for="celular">Celular</label>
    <input type="text" class="form-control" placeholder="Digite o celular do contato" asp-for="Celular">
    @Html.ValidationMessageFor(x => x.Celular)
  </div>
  <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
  <a class="btn btn-secondary btn-block" asp-action="Index" role="button">Voltar</a>
</form>